<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textView_Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/nombre"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_Apellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/apellido"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView_Nombre"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_Correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/correo"
        android:textSize="20sp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView_Telefono"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_Telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/telefono"
        android:textSize="20sp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView_Apellido"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView_Correo"
        android:text="Fecha"
        android:textAlignment="center"
        android:textSize="18sp" />

</RelativeLayout>
